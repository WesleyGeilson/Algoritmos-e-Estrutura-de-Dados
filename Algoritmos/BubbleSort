// -------------- ALGORITMO BUBBLESORT -------------- // ordenar
// Vantagem: Didatico, crucial para prosseguir na disciplina; 
// Desvantagem: Complexidade: O(nÂ²)

Bubblesort(vet[1...n]){
    int i;
    int j;
    int aux

    para (j = 1 ate n-1, j++){  // como nosso algoritmo coloca o maior por ultimo, nao precisamos sempre ir ate la para verificar.
        troca_flag = falsa
        para(i = 1 ate n-1, i++){
            Se(v[i] > v[i+1]){
                aux = v[i+1]
                v[i+1] = v[i]
                v[i] = aux
                troca_flag = verdadeira
            }
        }

        Se (troca_flag == falsa){
            parar;
        }
    }
}


